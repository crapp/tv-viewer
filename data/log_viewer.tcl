proc log_viewerPrepareFileSocket {logfile logsocket logsize} {
	puts $::main(debug_msg) "\033\[0;1;33mDebug: log_viewerPrepareFileSocket \033\[0m \{$logfile\} \{$logsocket\}"
	if {$::option(log_files) == 1} {
		if {[file exists "$::option(home)/log/$logfile"]} {
			if {[file size "$::option(home)/log/$logfile"] > [expr $::option($logsize) * 1000]} {
				catch {file delete "$::option(home)/log/$logfile"}
				set [set logsocket] [open "$::option(home)/log/$logfile" w]
			} else {
				set [set logsocket] [open "$::option(home)/log/$logfile" a]
			}
		} else {
			set [set logsocket] [open "$::option(home)/log/$logfile" w]
		}
		if {"$logfile" == "tvviewer.log"} {
			puts $::log(tvAppend) "
########################################################################
# TV-Viewer logfile. Release version [lindex $::option(release_version) 0] Build [lindex $::option(release_version) 1]
# Start new session [clock format [clock scan now] -format {%d.%m.%Y %H:%M:%S}]
#"
			close $::log(tvAppend)
			set ::log(tvAppend) [open "$::option(home)/log/$logfile" a]
		}
		if {"$logfile" == "videoplayer.log"} {
			puts $::log(mplAppend) "
########################################################################
# MPlayer logfile. Release version [lindex $::option(release_version) 0] Build [lindex $::option(release_version) 1]
# Start new session [clock format [clock scan now] -format {%d.%m.%Y %H:%M:%S}]
#"
			close $::log(mplAppend)
			set ::log(mplAppend) [open "$::option(home)/log/videoplayer.log" a]
		}
		if {"$logfile" == "scheduler.log"} {
			puts $::log(schedAppend) "
########################################################################
# Scheduler logfile. Release version [lindex $::option(release_version) 0] Build [lindex $::option(release_version) 1]
# Start new session [clock format [clock scan now] -format {%d.%m.%Y %H:%M:%S}]
#"
			close $::log(schedAppend)
			set ::log(schedAppend) [open "$::option(home)/log/scheduler.log" a]
		}
		if {"$logfile" == "tvviewer.log"} {
			log_writeOut ::log(tvAppend) 0 "Logging is enabled in the configuration."
			log_writeOut ::log(tvAppend) 0 "Starting to log events generated by TV-Viewer, MPlayer, Scheduler "
		}
	} else {
		set ::log(mplAppend) [open /dev/null a]
		set ::log(tvAppend) [open /dev/null a]
		set ::log(schedAppend) [open /dev/null a]
	}
	if {"$logfile" == "tvviewer.log"} {
		fconfigure $::log(tvAppend) -blocking no -buffering line
	}
	if {"$logfile" == "videoplayer.log"} {
		fconfigure $::log(mplAppend) -blocking no -buffering line
	}
	if {"$logfile" == "scheduler.log"} {
		set ::log(tvAppend) $::log(schedAppend)
		fconfigure $::log(schedAppend) -blocking no -buffering line
	}
}

proc log_viewerSaveLog {handler parent} {
	set types {
	{{Logfiles}      {.log}       }
	}
	array set sofile {
		type(tv) tvviewer
		type(mpl) videoplayer
		type(sched) scheduler
	}
	
	vid_wmCursor 0
	set ofile [ttk::getSaveFile -filetypes $types -defaultextension ".log" -initialdir "$::env(HOME)" -initialfile "[subst $sofile(type\($handler\))]" -hidden 0 -title [mc "Choose output file"] -parent $parent]
	if {[string trim $ofile] == {}} {
		vid_wmCursor 1
		return
	}
	if {[file isdirectory [file dirname "$ofile"]] == 0} {
		log_writeOut ::log(tvAppend) 2 "Can not save logfile"
		log_writeOut ::log(tvAppend) 2 "$ofile"
		log_writeOut ::log(tvAppend) 2 "Not a directory"
		vid_wmCursor 1
		return
	}
	vid_wmCursor 1
	file copy -force "$::option(home)/log/$sofile(type\($handler\)).log" "$ofile"
}

